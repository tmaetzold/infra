#!/usr/bin/env just --justfile

home-manager-cmd := "home-manager --extra-experimental-features 'nix-command flakes'"

# show available commands
[private]
default:
    @just --list

# switch Home Manager profile
switch profile:
    @echo "Enabling nix experimental features and switching to profile: {{ profile }}"
    @NIX_CONFIG="experimental-features = nix-command flakes" home-manager switch --flake .#{{ profile }}
